{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_user_index') }}">
        Retour à la liste des utilisateurs</a>
    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>
    {{ include('admin/admin_user/_delete_form.html.twig') }}
{% endblock %}
