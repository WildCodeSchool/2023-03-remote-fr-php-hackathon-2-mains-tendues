{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-primary">
        <a href="{{ path('app_admin_user_index') }}" class="text-decoration-none text-white">Retour à la liste des utilisateurs</a>
    </button>
    <button class="btn btn-primary">
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="text-decoration-none text-white">Modifier</a>
    </button>
    {{ include('admin/admin_user/_delete_form.html.twig') }}
{% endblock %}
