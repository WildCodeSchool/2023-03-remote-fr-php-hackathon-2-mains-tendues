{% extends 'admin/base.html.twig' %}


{% block title %}Liste des modèles{% endblock %}

{% block body %}
<div class="mb-4"><a href="{{ path('index') }}"><i class="bi bi-arrow-90deg-left"></i>
        Accueil de l'administration </a></div>
<h1 class="admin-title border text-center mb-2 text-uppercase">Liste des modeles</h1>
<div class="mt-2 mb-2 btn btn-info"><a href="{{ path('app_admin_model_new') }}"
                                       class="text-decoration-none text-white">Créer un nouveau modèle</a></div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Valeur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr class="position-relative">
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>{{ model.value }}</td>
                <td>
                    <a class="stretched-link" href="{{ path('app_admin_model_edit', {'id': model.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(models) }}
    </div>
{% endblock %}
