{% extends 'admin/base.html.twig' %}

{% block title %}Listes Smartphone{% endblock %}

{% block body %}
    <div class="mb-4"><a href="{{ path('index') }}"><i class="bi bi-arrow-90deg-left"></i>
            Accueil de l'administration </a></div>
    <h1 class="admin-title border text-center mb-2 text-uppercase">Liste des Smartphones</h1>
    <div class="mt-2 mb-2 btn btn-info"><a href="{{ path('app_admin_smartphone_new') }}"
                                           class="text-decoration-none text-white">Ajouter un nouveau téléphone</a></div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Ram</th>
                <th>Stockage</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for smartphone in smartphones %}
            <tr>
                <td>{{ smartphone.id }}</td>
                <td>{{ smartphone.brand.name }}</td>
                <td>{{ smartphone.model.name }}</td>
                <td>{{ smartphone.ram.ram }}</td>
                <td>{{ smartphone.stockage.size }}</td>
                <td>{{ smartphone.price }}</td>
                <td>{{ smartphone.isSold ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_admin_smartphone_edit', {'id': smartphone.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(smartphones) }}
    </div>
{% endblock %}
