{% extends 'admin/base.html.twig' %}

{% block title %}Smartphone{% endblock %}

{% block body %}
    <h1 class="admin-title">Smartphone</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ smartphone.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ smartphone.price }}</td>
            </tr>
            <tr>
                <th>IsSold</th>
                <td>{{ smartphone.isSold ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ smartphone.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_smartphone_index') }}">Liste des smartphones</a>

    <a href="{{ path('app_admin_smartphone_edit', {'id': smartphone.id}) }}">Modifier</a>

    {{ include('admin/admin_smartphone/_delete_form.html.twig') }}
{% endblock %}
