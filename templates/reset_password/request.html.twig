{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

    <div class="container bg-secondary mt-5 p-5 rounded">
        <div class="row justify-content-center">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mt-4 col-md-6 text-center" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <div class="col-md-6">
                <h1 class="text-center mt-4 mb-4">Réinitialisez votre mot de passe</h1>
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="mt-2 text-center">
                    <small>
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button class="btn btn-warning">Envoyer un e-mail de réinitialisation du mot de passe</button>
                </div>
            </div>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
