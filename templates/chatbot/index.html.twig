{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container mt-4 d-flex justify-content-center">
        <div class="card" style="width: 80%;">
            <div class="card-header text-center">
                <h1 >FAQ</h1>
            </div>
            <div class="card-body">
                <div class="form-floating">
                    {% if response is defined and response is not empty %}
                        <p class="text-lg-start" {{ stimulus_controller('symfony/ux-typed', {strings:
                            [response], typeSpeed: 10, startDelay: 0,
                            showCursor: false,}) }}> </p>
                    {% endif %}
                    <label for="floatingTextarea2"></label>
                </div>
            </div>
                    <form id="question-form" method="POST" action="{{ path('app_message') }}">
                            <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="submitted_question" onchange="submitForm()">
                                <option selected>Open this select menu </option>
                                {% for question in questions %}
                                <option value="{{ question }}">{{ question }}</option>
                                {% endfor %}
                            </select>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function submitForm() {
            document.getElementById("question-form").submit();
        }
    </script>
{% endblock %}
